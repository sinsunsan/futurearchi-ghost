{{!-- post-lesson.hbs --}}
{{!< default}}

{{#contentFor "styles"}}
  <link rel="stylesheet" type="text/css" href="{{asset "built/lesson.css"}}" />
{{/contentFor}}

<div class="learning-container">
  {{!-- Sidebar is automatically included for every lesson --}}
  {{> "lesson-sidebar"}}
  
  {{!-- Content area --}}
  <div class="lesson-content">
    {{#post}}
      {{#if @member}}
        <article class="article">
          <h1>{{title}}</h1>
          {{{content}}}
        </article>
      {{else}}
        {{> "premium-message"}}
      {{/if}}
    {{/post}}
  </div>
</div>